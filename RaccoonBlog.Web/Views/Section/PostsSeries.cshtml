@model List<RecentSeriesViewModel>
@{
    Layout = "";
}

<div id="postsSeries">
    <h4>@ViewBag.SectionTitle.ToUpper()</h4>

    @if (Model.Count > 0)
    {
        <ol>
            @foreach (var series in Model)
            {
                <li><a href="@Url.Action("Series", "Posts", new { series.SeriesId, series.SeriesSlug })">@series.SeriesSlug</a> <em>(@series.PostsCount)</em></li>
            }
        </ol>

        <a href="@Url.Action("PostsSeries", "Series")">more</a>
    }
</div>