@model IList<PostsSeriesViewModel>
@{
    Layout = "";
}

<div id="postsSeries">
    <h4>@ViewBag.SectionTitle.ToUpper()</h4>

    @if (Model.Count > 0)
    {
        <ol>
            @foreach (var series in Model)
            {
                <li><a href="@Url.Action("Series", "Posts", new { series.SeriesTitle })">@series.SeriesTitle</a> <em>(@series.PostsCount)</em></li>
            }
        </ol>
        
        //TODO: URL to more series
    }
</div>